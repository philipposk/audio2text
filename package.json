{
  "name": "mr-transcribe",
  "version": "1.0.0",
  "description": "Audio to text transcription web app with AI refinement",
  "type": "module",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon server/index.js",
    "dev:client": "vite",
    "build": "vite build",
    "build:pages": "vite build && echo 'Frontend built to docs/ folder for GitHub Pages'",
    "preview": "vite preview",
    "start": "node server/index.js"
  },
  "keywords": [
    "transcription",
    "audio",
    "whisper",
    "ai",
    "greek"
  ],
  "author": "Philippos Ktistakis",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.20.1",
    "docx": "^8.2.2",
    "pdf-lib": "^1.17.1",
    "ws": "^8.14.2",
    "express-ws": "^5.0.2"
  },
  "devDependencies": {
    "vite": "^5.0.8",
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "@vitejs/plugin-react": "^4.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}

