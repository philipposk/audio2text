{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/transcribe",
      "destination": "/api/transcribe.js"
    },
    {
      "source": "/api/chat",
      "destination": "/api/chat.js"
    },
    {
      "source": "/api/export/:format",
      "destination": "/api/export.js"
    }
  ]
}
